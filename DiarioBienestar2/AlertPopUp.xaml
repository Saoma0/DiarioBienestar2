<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="DiarioBienestar2.AlertPopUp"
               >

    <Grid BackgroundColor="Transparent" VerticalOptions="Center" HorizontalOptions="Center">
        <Frame BackgroundColor="#FFFFFF" CornerRadius="12" Padding="20" WidthRequest="300" HasShadow="True">
            <VerticalStackLayout>
                <Label x:Name="popupMessage" HorizontalOptions="Center" FontSize="14" TextColor="#333" Padding="10" />
            </VerticalStackLayout>
        </Frame>
    </Grid>

</toolkit:Popup>
