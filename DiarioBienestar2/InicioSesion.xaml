<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DiarioBienestar2.InicioSesion"
             Shell.NavBarIsVisible="False">

    <VerticalStackLayout Padding="20" Spacing="20" VerticalOptions="Center">
        <Frame BorderColor="#2196F3" CornerRadius="10" Padding="20" HasShadow="True" HeightRequest="300" WidthRequest="500">
            <!-- Formulario -->
            <VerticalStackLayout Spacing="15" >
                <Frame BorderColor="#2196F3" CornerRadius="5" Padding="10">
                    <Entry x:Name="entryInicioUsuario" Placeholder="Escribe el nombre de usuario..." BackgroundColor="#F7F7F7"></Entry>
                </Frame>
                <Frame BorderColor="#2196F3" CornerRadius="5" Padding="10">
                    <Entry x:Name="entryInicioContraseña" Placeholder="Escribe tu contraseña..." IsPassword="True" BackgroundColor="#F7F7F7"></Entry>
                </Frame>
                <Button Text="Iniciar sesión" Clicked="iniciar_sesion" BackgroundColor="#2196F3" TextColor="White" CornerRadius="10" Padding="10" WidthRequest="200"></Button>
            </VerticalStackLayout>
        </Frame>
    </VerticalStackLayout>

</ContentPage>
