<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DiarioBienestar2.Progreso"
             Title="Progreso" 
             BackgroundColor="#F7F7F7">
    <Frame HeightRequest="500" WidthRequest="800">
        <VerticalStackLayout Padding="20" Spacing="20">
            <Label Text="Tu Progreso Semanal" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" TextColor="#333" />
            <Label Text="Actividad Física Promedio" FontSize="16" HorizontalOptions="Center" TextColor="#555" />
            <Frame CornerRadius="10" BorderColor="#2196F3" Padding="0">
                <ProgressBar x:Name="progressBarActividad" HeightRequest="20" Margin="10" ProgressColor="#E0E0E0" BackgroundColor="#E0E0E0" />
            </Frame>
            <Label Text="Energía Promedio" FontSize="16" HorizontalOptions="Center" TextColor="#555" />
            <Frame CornerRadius="10" BorderColor="#2196F3" Padding="0">
                <ProgressBar x:Name="progressBarEnergia" HeightRequest="20" Margin="10" ProgressColor="#E0E0E0" BackgroundColor="#E0E0E0" />
            </Frame>
            <Button Text="Actualizar Datos" FontSize="18" TextColor="White" BackgroundColor="#2196F3" CornerRadius="10" HeightRequest="50" Clicked="actualizar_datos" HorizontalOptions="FillAndExpand" WidthRequest="180" />
        </VerticalStackLayout>
    </Frame>
</ContentPage>
