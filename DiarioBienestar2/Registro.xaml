<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DiarioBienestar2.Registro"
             Shell.NavBarIsVisible="False">

    <VerticalStackLayout Padding="20" Spacing="20" VerticalOptions="Center">
        <Frame BorderColor="#4CAF50" CornerRadius="10" Padding="20" HasShadow="True" HeightRequest="300" WidthRequest="500">
            <VerticalStackLayout Spacing="15">
                <Frame BorderColor="#4CAF50" CornerRadius="5" Padding="10">
                    <Entry x:Name="entryUsuario" Placeholder="Escribe el nombre de usuario..." BackgroundColor="Transparent"></Entry>
                </Frame>
                <Frame BorderColor="#4CAF50" CornerRadius="5" Padding="10">
                    <Entry x:Name="entryContraseña" Placeholder="Escribe tu contraseña..." IsPassword="True" BackgroundColor="Transparent" ></Entry>
                </Frame>
                <Button Text="Registrarse" Clicked="guardarRegistro" BackgroundColor="#4CAF50" TextColor="White" CornerRadius="10" Padding="10" WidthRequest="200"></Button>
            </VerticalStackLayout>
        </Frame>
    </VerticalStackLayout>

</ContentPage>
